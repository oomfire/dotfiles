# No borders
default_border pixel 2


# Browser 
bindsym $mod+w exec $ei $browser

# Editor
bindsym $mod+e exec $ei emacs

# Exit Menu change for new settings script
bindsym $mod+Shift+x exec $ei ~/AB_Scripts/exitmenu


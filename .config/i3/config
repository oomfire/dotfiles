# Show i3 key binds in rofi change for new settings script
bindsym $mod+b exec $ei ~/AB_Scripts/i3-binds

# Kitty terminal then force borderless
bindsym $mod+Return exec $ei kitty 
for_window [class="kitty"] border pixel 0

#Toggle Polybar
bindsym $mod+y exec $ei polybar-msg cmd toggle

# PrintScreen
